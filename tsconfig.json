{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es6"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**/*.test.ts", "*.js", "build", "test"]
}
